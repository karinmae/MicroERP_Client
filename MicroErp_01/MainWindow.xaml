<Window x:Class="MicroErp_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MicroERP" Height="450" Width="700">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5" >
            <GradientStop Color="Wheat" Offset="0" />
            <GradientStop Color="White" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="style1">
            <Setter Property="Control.Foreground" Value="Black" />
            <Setter Property="Control.VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl TabStripPlacement="Top" Margin="0,5,0,5" BorderThickness="0,1,0,0" Background="{x:Null}">


            <TabItem Header="Kontakte" Height="30" Width="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <Label Style="{StaticResource style1}" Grid.Row="1" Height="26" Margin="15,5,10,0" >Name:</Label>
                    <TextBox x:Name ="txtSearch"  Grid.Column="1" Grid.Row="1" Margin="10,10,30,5" />
                    <Button Grid.Row="2" Grid.Column="2" Width="100" HorizontalAlignment="Right" Margin="10,5,30,5">Suchen</Button>

                    <ListView Name="Suche" Grid.Row="3" Grid.ColumnSpan="2" Margin="30,5,30,5" Height="265" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Ergebnis" Width="623"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Rechnungen" Height="30" Width="100">
                <Grid>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="COOOCKIESSS!!"
			       VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
